---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { Image } from 'astro:assets';
import isoLogo from '../assets/iso_logo_blanco_horizontal.png';
import logoAgritech from '../assets/footer/logo_agritech.png';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="text-white py-10 relative overflow-hidden theme-institutional">
  <div class="absolute top-0 right-0 w-64 h-64 bg-[#8DC63F] opacity-10 blur-[100px] -mr-32 -mt-32"></div>
  <div class="container mx-auto px-4 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <div>
        <div class="flex items-center space-x-3 mb-4">
          <Image 
            src={isoLogo}
            alt="Agua Fertil Logo - Agua y Nutrición Sustentable"
            class="w-36 h-auto"
          />
        </div>
        <p class="text-emerald-100 text-sm leading-relaxed">
          {t('footer.description')}
        </p>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">{t('footer.contact')}</h3>
        <div class="space-y-3 text-emerald-100 text-sm">
          <a href="https://www.google.com/maps/search/?api=1&query=Ruta+20%2C+Colectora+Acceso+Este+sector+sur%2C+J5411+Santa+Luc%C3%ADa%2C+San+Juan" target="_blank" rel="noopener noreferrer" class="flex items-start space-x-2 hover:text-white transition-colors py-1 group">
            <svg class="w-5 h-5 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-left">Ruta 20, Colectora Acceso Este sector sur, J5411 Santa Lucía, San Juan</span>
          </a>
          <button id="footer-email" class="flex items-center space-x-2 hover:text-white transition-colors cursor-pointer group relative">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>aguafertilventas@gmail.com</span>
            
            <div id="footer-copy-tooltip" class="absolute -top-8 left-1/2 -translate-x-1/2 bg-white text-emerald-900 text-xs py-1 px-3 rounded shadow-lg opacity-0 transform translate-y-2 transition-all duration-300 pointer-events-none whitespace-nowrap z-50">
              {lang === 'es' ? 'Copiado!' : 'Copied!'}
            </div>
          </button>
          <a href="tel:+542644447953" class="flex items-center space-x-2 hover:text-white transition-colors py-1">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span>+54 (264) 444-6054</span>
          </a>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">{t('footer.follow')}</h3>
        <div class="flex space-x-4">
          <a href="https://www.instagram.com/aguafertil/" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="w-12 h-12 bg-white/10 hover:bg-white/20 rounded-full flex items-center justify-center transition-all hover:scale-110">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073z"/>
              <path d="M12 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a href="https://www.youtube.com/@aguafertil" target="_blank" rel="noopener noreferrer" aria-label="YouTube" class="w-12 h-12 bg-white/10 hover:bg-white/20 rounded-full flex items-center justify-center transition-all hover:scale-110">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
          <a href="https://open.spotify.com/show/aguafertil" target="_blank" rel="noopener noreferrer" aria-label="Spotify" class="w-12 h-12 bg-white/10 hover:bg-white/20 rounded-full flex items-center justify-center transition-all hover:scale-110">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
            </svg>
          </a>
        </div>
        <div class="flex flex-col mt-4">
          <h3 class="text-lg font-semibold mb-4">{t('footer.workus')}</h3>
          <a href="https://www.linkedin.com/company/aguafertil/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="w-12 h-12 bg-white/10 hover:bg-white/20 rounded-full flex items-center justify-center transition-all hover:scale-110">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <div class="border-t border-white/10 pt-6 text-center text-white text-sm">
      <p>&copy; {new Date().getFullYear()} Agua Fertil. {t('footer.rights')}</p>
      <div class="w-full flex items-center justify-center text-center space-x-2">
        <a href="https://agritech.ar" target="_blank" rel="noopener noreferrer" class="text-white underline hover:text-white/80 transition-all hover:scale-110">{t('footer.powered')}</a> 
        <Image src={logoAgritech} alt="AgriTech" class="w-8 h-8 inline-block">
      </div>
    </div>
  </div>
</footer>

<script>
  const footerEmail = document.getElementById('footer-email');
  const footerTooltip = document.getElementById('footer-copy-tooltip');

  footerEmail?.addEventListener('click', () => {
    const email = 'aguafertilventas@gmail.com';
    navigator.clipboard.writeText(email).then(() => {
      if (footerTooltip) {
        footerTooltip.classList.remove('opacity-0', 'translate-y-2');
        footerTooltip.classList.add('opacity-100', 'translate-y-0');
        
        setTimeout(() => {
          footerTooltip.classList.remove('opacity-100', 'translate-y-0');
          footerTooltip.classList.add('opacity-0', 'translate-y-2');
        }, 2000);
      }
    });
  });
</script>
