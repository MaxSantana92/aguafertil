<style>
  .testimonials-track {
    --mobile-card-width: min(86vw, 340px);
    padding-inline: calc((100% - var(--mobile-card-width)) / 2);
    -ms-overflow-style: none;
    scrollbar-width: none;
    scroll-behavior: smooth;
    overscroll-behavior-x: contain;
  }

  .testimonials-track::-webkit-scrollbar {
    display: none;
  }

  .testimonials-item {
    width: var(--mobile-card-width);
    min-width: var(--mobile-card-width);
    max-width: var(--mobile-card-width);
  }

  .testimonial-dot {
    background: rgb(125 211 252 / 0.5);
  }

  .testimonial-dot.active {
    width: 2rem;
    background: rgb(14 165 233);
  }

  @media (min-width: 768px) {
    .testimonials-track {
      padding-inline: 0;
    }

    .testimonials-item {
      width: auto;
      min-width: 0;
      max-width: none;
    }
  }

  .social-card {
    animation: bounceIn 1s ease-out;
    animation-fill-mode: both;
  }

  @keyframes bounceIn {
    0% {
      opacity: 0;
      transform: scale(0.3);
    }
    50% {
      opacity: 1;
      transform: scale(1.05);
    }
    70% {
      transform: scale(0.9);
    }
    100% {
      transform: scale(1);
    }
  }
</style>

<script>
  function setupTestimonialsCarousel() {
    const track = document.querySelector<HTMLElement>('[data-testimonials-track]');
    if (!track || track.dataset.initialized) {
      return;
    }

    const items = Array.from(track.querySelectorAll<HTMLElement>('[data-testimonial-item]'));
    const dots = Array.from(document.querySelectorAll<HTMLButtonElement>('[data-testimonial-dot]'));
    if (!items.length || !dots.length) {
      return;
    }

    track.dataset.initialized = 'true';

    const isMobile = () => window.matchMedia('(max-width: 767px)').matches;
    const clampIndex = (index: number) => Math.max(0, Math.min(index, items.length - 1));

    const getNearestIndex = () => {
      const viewportCenter = track.scrollLeft + track.clientWidth / 2;
      let nearestIndex = 0;
      let nearestDistance = Number.POSITIVE_INFINITY;

      items.forEach((item, index) => {
        const itemCenter = item.offsetLeft + item.clientWidth / 2;
        const distance = Math.abs(itemCenter - viewportCenter);
        if (distance < nearestDistance) {
          nearestDistance = distance;
          nearestIndex = index;
        }
      });

      return nearestIndex;
    };

    const collapseCard = (item: HTMLElement) => {
      const card = item.querySelector<HTMLElement>('[data-testimonial-card]');
      const preview = card?.querySelector<HTMLElement>('[data-testimonial-preview]');
      const player = card?.querySelector<HTMLElement>('[data-testimonial-player]');
      const video = card?.querySelector<HTMLVideoElement>('[data-testimonial-video]');

      if (!card || !preview || !player || !video) {
        return;
      }

      video.pause();
      preview.classList.remove('hidden');
      player.classList.add('hidden');
      card.classList.remove('is-player-active');
    };

    const collapseCardsOutside = (activeIndex: number) => {
      items.forEach((item, index) => {
        if (index === activeIndex) {
          return;
        }
        collapseCard(item);
      });
    };

    const setActiveDot = (activeIndex: number) => {
      dots.forEach((dot, index) => {
        const isActive = index === activeIndex;
        dot.classList.toggle('active', isActive);
        if (isActive) {
          dot.setAttribute('aria-current', 'true');
          return;
        }
        dot.removeAttribute('aria-current');
      });
    };

    let animationFrameId: number | null = null;
    const animateScrollTo = (targetLeft: number, durationMs = 460, onFinish?: () => void) => {
      if (animationFrameId !== null) {
        cancelAnimationFrame(animationFrameId);
      }

      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if (prefersReducedMotion) {
        track.scrollLeft = targetLeft;
        onFinish?.();
        return;
      }

      const startLeft = track.scrollLeft;
      const distance = targetLeft - startLeft;
      const startTime = performance.now();

      const easeInOutCubic = (t: number) => {
        return t < 0.5 ? 4 * t * t * t : 1 - Math.pow(-2 * t + 2, 3) / 2;
      };

      const step = (time: number) => {
        const elapsed = time - startTime;
        const progress = Math.min(elapsed / durationMs, 1);
        const eased = easeInOutCubic(progress);
        track.scrollLeft = startLeft + distance * eased;

        if (progress < 1) {
          animationFrameId = requestAnimationFrame(step);
          return;
        }

        animationFrameId = null;
        onFinish?.();
      };

      animationFrameId = requestAnimationFrame(step);
    };

    const centerByIndex = (index: number, smooth = true) => {
      const safeIndex = clampIndex(index);
      const item = items[safeIndex];
      if (!item) {
        return;
      }

      const targetLeft = item.offsetLeft - (track.clientWidth - item.clientWidth) / 2;
      if (smooth) {
        animateScrollTo(targetLeft, 460, () => {
          collapseCardsOutside(safeIndex);
        });
      } else {
        track.scrollLeft = targetLeft;
        collapseCardsOutside(safeIndex);
      }
      setActiveDot(safeIndex);
    };

    let settleTimer: number | undefined;
    const handleScroll = () => {
      const nearest = getNearestIndex();
      setActiveDot(nearest);

      if (settleTimer) {
        window.clearTimeout(settleTimer);
      }
      settleTimer = window.setTimeout(() => {
        const settledIndex = getNearestIndex();
        setActiveDot(settledIndex);
        collapseCardsOutside(settledIndex);
      }, 160);
    };

    track.addEventListener('scroll', handleScroll, { passive: true });

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        centerByIndex(index);
      });
    });

    setActiveDot(0);
    if (isMobile()) {
      centerByIndex(0, false);
    }
  }

  document.addEventListener('astro:page-load', setupTestimonialsCarousel);
  document.addEventListener('DOMContentLoaded', setupTestimonialsCarousel);
</script>
