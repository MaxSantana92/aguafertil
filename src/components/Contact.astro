---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { Image } from 'astro:assets';
import isoLogo from '../assets/iso_logo.png';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contacto" class="bg-white w-full py-16 md:py-20 lg:py-24">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <div class="mb-6 flex justify-center">
        <Image 
          src={isoLogo}
          alt="Agua Fertil"
          width={80}
          height={80}
          class="w-20 h-20 opacity-90"
        />
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{t('contact.title')}</h2>
      <p class="text-xl text-gray-600">{t('contact.subtitle')}</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <div class="space-y-8">
        <div class="bg-gradient-to-br from-emerald-50 to-lime-50 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">
            {lang === 'es' ? 'Información de Contacto' : 'Contact Information'}
          </h3>

          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0 shadow-md theme-gradient">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-1">{lang === 'es' ? 'Dirección' : 'Address'}</h4>
                <p class="text-gray-600">San Juan, Argentina</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0 shadow-md theme-gradient">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-1">Email</h4>
                <p class="text-gray-600">info@aguafertil.com.ar</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0 shadow-md theme-gradient">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-1">{lang === 'es' ? 'Teléfono' : 'Phone'}</h4>
                <p class="text-gray-600">+54 (264) 123-4567</p>
              </div>
            </div>
          </div>
        </div>

        <div class="rounded-2xl p-8 text-white shadow-xl transform hover:scale-[1.02] transition-all duration-300 theme-institutional">
          <h3 class="text-2xl font-bold mb-4">
            {lang === 'es' ? '¿Por qué elegirnos?' : 'Why choose us?'}
          </h3>
          <ul class="space-y-3">
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-3 flex-shrink-0 text-[#8DC63F]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>{lang === 'es' ? 'Asesoramiento profesional gratuito' : 'Free professional advice'}</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-3 flex-shrink-0 text-[#8DC63F]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>{lang === 'es' ? 'Tecnologías de última generación' : 'Latest generation technologies'}</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-3 flex-shrink-0 text-[#8DC63F]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>{lang === 'es' ? 'Préstamo de maquinaria' : 'Machinery loan'}</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-3 flex-shrink-0 text-[#8DC63F]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>{lang === 'es' ? 'Seguimiento continuo' : 'Continuous monitoring'}</span>
            </li>
          </ul>
        </div>
      </div>

      <div>
        <form id="contact-form" class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 shadow-lg space-y-6">
          <div>
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">{t('contact.name')}</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all"
              placeholder={lang === 'es' ? 'Tu nombre completo' : 'Your full name'}
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">{t('contact.email')}</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all"
              placeholder={lang === 'es' ? 'tu@email.com' : 'you@email.com'}
            />
          </div>

          <div>
            <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">{t('contact.phone')}</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all"
              placeholder={lang === 'es' ? 'Tu número de teléfono' : 'Your phone number'}
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">{t('contact.message')}</label>
            <textarea
              id="message"
              name="message"
              required
              rows="4"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all resize-none"
              placeholder={lang === 'es' ? 'Cuéntanos sobre tu proyecto o consulta...' : 'Tell us about your project or query...'}
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full text-white py-4 px-8 rounded-full font-bold hover:shadow-xl hover:scale-[1.05] transition-all flex items-center justify-center group shadow-lg theme-gradient"
          >
            {t('contact.submit')}
            <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </button>

          <div id="form-message" class="hidden text-center p-4 rounded-xl"></div>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .theme-gradient {
    background: linear-gradient(to bottom right, var(--theme-gradient-from), var(--theme-gradient-to));
  }
  
  .theme-institutional svg {
    color: var(--theme-accent, white);
  }
</style>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const formMessage = document.getElementById('form-message') as HTMLElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    try {
      formMessage.classList.remove('hidden', 'bg-red-100', 'text-red-700');
      formMessage.classList.add('bg-emerald-100', 'text-emerald-700');
      formMessage.textContent = 'Enviando mensaje...';

      await new Promise(resolve => setTimeout(resolve, 1000));

      formMessage.textContent = document.documentElement.lang === 'es'
        ? 'Mensaje enviado correctamente. Te contactaremos pronto.'
        : 'Message sent successfully. We will contact you soon.';

      form.reset();

      setTimeout(() => {
        formMessage.classList.add('hidden');
      }, 5000);

    } catch (error) {
      formMessage.classList.remove('hidden', 'bg-emerald-100', 'text-emerald-700');
      formMessage.classList.add('bg-red-100', 'text-red-700');
      formMessage.textContent = document.documentElement.lang === 'es'
        ? 'Error al enviar el mensaje. Inténtalo de nuevo.'
        : 'Error sending message. Please try again.';
    }
  });
</script>
