---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { Image } from 'astro:assets';
import isoLogo from '../assets/iso_logo.png';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="quienes-somos" class="bg-white w-full py-16 md:py-20 lg:py-24">
	<div class="container mx-auto px-4">
		<div class="text-center max-w-4xl mx-auto">
			<div class="mb-6 flex justify-center">
				<Image 
					src={isoLogo}
					alt="Agua Fertil - Sustentabilidad y NutriciÃ³n"
					width={128}
					height={128}
					class="w-24 h-24 md:w-32 md:h-32 animate-pulse-slow"
					loading="eager"
				/>
			</div>
			<div class="inline-flex items-center bg-emerald-100 px-4 py-2 rounded-full text-emerald-700 font-medium mb-4">
				<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
				</svg>
				{t('about.subtitle')}
			</div>
			<h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">{t('about.title')}</h2>
			<p class="text-xl text-gray-600 leading-relaxed">{t('about.description')}</p>
		</div>
	</div>
</section>

<style>
	@keyframes pulse-slow {
		0%, 100% {
			opacity: 1;
			transform: scale(1);
		}
		50% {
			opacity: 0.9;
			transform: scale(1.05);
		}
	}

	.animate-pulse-slow {
		animation: pulse-slow 3s ease-in-out infinite;
	}
</style>
