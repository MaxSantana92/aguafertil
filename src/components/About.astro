---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="quienes-somos" class="bg-white w-full">
	<div class="container mx-auto px-4">
		<div class="text-center max-w-4xl mx-auto">
			<div class="inline-flex items-center bg-emerald-100 px-4 py-2 rounded-full text-emerald-700 font-medium mb-4">
				<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
				</svg>
				{t('about.subtitle')}
			</div>
			<h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">{t('about.title')}</h2>
			<p class="text-xl text-gray-600 leading-relaxed">{t('about.description')}</p>
		</div>
	</div>
</section>
