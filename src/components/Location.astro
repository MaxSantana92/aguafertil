---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="bg-gradient-to-br from-gray-50 to-white w-full py-16 md:py-20 lg:py-24">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{t('location.title')}</h2>
      <p class="text-xl text-gray-600 text-gray-900 font-medium">
        {t('location.subtitle')}
      </p>
    </div>

    <div class="max-w-5xl mx-auto px-4">
      <div class="relative rounded-3xl overflow-hidden shadow-2xl" style="height: 450px;">
        <iframe
          src="https://www.google.com/maps?q=-31.555365,-68.476728&ll=-31.555365,-68.476728&z=17&output=embed"
          width="100%"
          height="100%"
          title={t('location.title')}
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="absolute inset-0"
        ></iframe>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
        <div class="bg-white rounded-2xl p-6 shadow-lg text-center hover:shadow-xl transition-shadow">
          <div class="w-14 h-14 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">{t('location.schedule_label')}</h3>
          <p class="text-gray-600 text-sm text-gray-900 font-medium">
            {t('location.schedule_days')}<br />
            9:00 - 18:00 hs
          </p>
        </div>

        <a href="tel:+542644447953" class="block bg-white rounded-2xl p-6 shadow-lg text-center hover:shadow-xl transition-all hover:scale-105 duration-300 cursor-pointer group">
          <div class="w-14 h-14 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">{t('location.phone_label')}</h3>
          <p class="text-gray-600 text-sm group-hover:text-cyan-600 transition-colors text-gray-900 font-medium">+54 (264) 444-7953</p>
        </a>

        <button id="email-card" class="block w-full bg-white rounded-2xl p-6 shadow-lg text-center hover:shadow-xl transition-all hover:scale-105 duration-300 cursor-pointer group relative">
          <div class="w-14 h-14 bg-gradient-to-br from-lime-500 to-green-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">{t('location.email_label')}</h3>
          <p class="text-gray-600 text-sm group-hover:text-lime-600 transition-colors text-gray-900 font-medium">aguafertilventas@gmail.com</p>
          
          <div id="copy-tooltip" class="absolute top-4 right-4 bg-gray-900 text-white text-xs py-1 px-3 rounded-full opacity-0 transform translate-y-2 transition-all duration-300 pointer-events-none">
            {lang === 'es' ? 'Copiado!' : 'Copied!'}
          </div>
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  const emailCard = document.getElementById('email-card');
  const copyTooltip = document.getElementById('copy-tooltip');

  emailCard?.addEventListener('click', () => {
    const email = 'aguafertilventas@gmail.com';
    navigator.clipboard.writeText(email).then(() => {
      if (copyTooltip) {
        copyTooltip.classList.remove('opacity-0', 'translate-y-2');
        copyTooltip.classList.add('opacity-100', 'translate-y-0');
        
        setTimeout(() => {
          copyTooltip.classList.remove('opacity-100', 'translate-y-0');
          copyTooltip.classList.add('opacity-0', 'translate-y-2');
        }, 2000);
      }
    });
  });
</script>
