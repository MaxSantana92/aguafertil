---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';
import agrocubeLogo from '../assets/brands/agrocube_logo.png';
import biovitaLogo from '../assets/brands/biovita_negro_1.png';
import agriglobalLogo from '../assets/brands/agriglobal.jpg';
import microvidasLogo from '../assets/brands/logo_microvidas.png';
import bloemenLogo from '../assets/brands/logobloemen_1.svg';
import simbiosLogo from '../assets/brands/simbios.png';
import materiaOrganicaImg from '../assets/technologies/materia_org谩nica.jpeg';
import biofertilizantesImg from '../assets/technologies/biofertilizantes.jpeg';
import bioestimulanteFoliarImg from '../assets/technologies/bioestimulante_foliar.jpeg';
import nanoparticulasSueloImg from '../assets/technologies/nanoparticulas_suelo.jpeg';
import microorganismosBeneficosImg from '../assets/technologies/microorganismos_ben茅ficos.jpeg';
import biocontroladoresImg from '../assets/technologies/biocontroladores.jpeg';
import jasCertifiedImg from '../assets/certifications/jas_certified_organic.webp';
import logoOrganicosImg from '../assets/certifications/logo_organicos.png';
import usdaSymbolImg from '../assets/certifications/usda-symbol.svg';
import letisLogoImg from '../assets/certifications/letis_logo.png';
import logoUeImg from '../assets/certifications/logo_ue.jpg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const products = [
  {
    name: 'MATERIA ORGNICA COMPOSTADA',
    nameEn: 'COMPOSTED ORGANIC MATTER',
    description: 'Presente en forma l铆quida y s贸lida en pelet. Nuestro compost fertiliza, mejora la estructura del suelo y aumenta la retenci贸n de agua y nutrientes.',
    descriptionEn: 'Available in liquid and solid pellet form. Our compost fertilizes, improves soil structure and increases water and nutrient retention.',
    icon: '',
    color: 'from-green-500 to-emerald-600',
    image: materiaOrganicaImg
  },
  {
    name: 'BIOFERTILIZANTES',
    nameEn: 'BIOFERTILIZERS',
    description: 'Abonos y Fertilizantes compuestos con N - P - K y Micronutrientes con incorporaci贸n de microorganismos ben茅ficos que mejoran la disponibilidad de nutrientes.',
    descriptionEn: 'Fertilizers and compounds with N - P - K and micronutrients with beneficial microorganisms that improve nutrient availability.',
    icon: 'К',
    color: 'from-blue-500 to-cyan-600',
    image: biofertilizantesImg
  },
  {
    name: 'BIOESTIMULANTES FOLIARES',
    nameEn: 'FOLIAR BIOSTIMULANTS',
    description: 'Amino谩cidos, Polifenoles y Fosfitos. Potencian el crecimiento y la resistencia al estr茅s de las plantas.',
    descriptionEn: 'Amino acids, polyphenols and phosphites. They enhance growth and plant stress resistance.',
    icon: '',
    color: 'from-lime-500 to-green-600',
    image: bioestimulanteFoliarImg
  },
  {
    name: 'NANOPARTCULAS CORRECTORAS DE SUELOS',
    nameEn: 'SOIL-CORRECTING NANOPARTICLES',
    description: 'Tecnolog铆a de vanguardia para maximizar resultados. Optimizan el pH, corrigen suelos salinos s贸dicos y mejoran la estructura del suelo para su m谩xima producci贸n.',
    descriptionEn: 'Cutting-edge technology to maximize results. They optimize pH, correct saline-sodic soils and improve soil structure for maximum production.',
    icon: '锔',
    color: 'from-purple-500 to-indigo-600',
    image: nanoparticulasSueloImg
  },
  {
    name: 'MICROORGANISMOS BENFICOS',
    nameEn: 'BENEFICIAL MICROORGANISMS',
    description: 'Son el motor biol贸gico del suelo. Transforman el alimento para las plantas. Cambian el aspecto f铆sico y qu铆mico del suelo. Son esenciales para tu cultivo.',
    descriptionEn: 'They are the biological engine of the soil. They transform food for plants. They change the physical and chemical aspect of the soil. They are essential for your crop.',
    icon: '',
    color: 'from-teal-500 to-emerald-600',
    image: microorganismosBeneficosImg
  },
  {
    name: 'BIOCONTROLADORES',
    nameEn: 'BIOCONTROLLERS',
    description: 'Hongos y bacterias que act煤an como insecticidas y fungicidas naturales contra plagas y enfermedades.',
    descriptionEn: 'Fungi and bacteria that act as natural insecticides and fungicides against pests and diseases.',
    icon: '',
    color: 'from-amber-500 to-orange-600',
    image: biocontroladoresImg
  }
];

type Brand = {
  name: string;
  logo: ImageMetadata;
  theme?: 'dark';
  labelAbove?: string;
};

const brands: Brand[] = [
  {
    name: 'Agrocube',
    logo: agrocubeLogo
  },
  {
    name: 'Biovita',
    logo: biovitaLogo
  },
  {
    name: 'Agriglobal',
    logo: agriglobalLogo
  },
  {
    name: 'Microvidas',
    logo: microvidasLogo
  },
  {
    name: 'Bloemen',
    logo: bloemenLogo
  },
  {
    name: 'Simbios',
    logo: simbiosLogo,
    labelAbove: t('products.technology_label')
  }
];

const brandLoop = [...brands, ...brands];
---

<section id="tecnologias" class="bg-linear-to-br from-gray-50 to-white w-full py-16 md:py-20 lg:py-24">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{t('products.title')}</h2>
    </div>

    <div class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {products.map((product, index) => (
          <div
            class="product-card group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100 cursor-pointer transform hover:-translate-y-2 overflow-hidden"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="product-card__media">
              <Image
                class="product-card__image"
                src={product.image}
                alt={lang === 'es' ? product.name : product.nameEn}
                width={640}
                height={360}
                sizes="(min-width: 1024px) 320px, (min-width: 768px) 45vw, 90vw"
                loading="lazy"
                decoding="async"
              />
              <div class="product-card__media-overlay"></div>
            </div>
            <div class="product-card__content">
              <h4 class="product-card__title">
                {lang === 'es' ? product.name : product.nameEn}
              </h4>
              <p class="product-card__description">
                {lang === 'es' ? product.description : product.descriptionEn}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="mt-12 bg-white rounded-3xl p-8 md:p-12 shadow-lg">
      <h3 class="text-2xl md:text-3xl font-bold text-center text-gray-900 mb-8">
        {t('products.brands_title')}
      </h3>
      <div class="brand-marquee" aria-label={t('products.brands_aria')}>
        <div class="brand-track">
          {brandLoop.map((brand, index) => {
            const isDark = brand.theme === 'dark';
            return (
              <div
                class="brand-logo brand-item flex flex-col items-center justify-center p-4 transition-all duration-300 transform hover:scale-105"
                aria-hidden={index >= brands.length}
              >
                <div class={`brand-card text-center ${isDark ? 'brand-card--dark' : ''}`}>
                  {brand.labelAbove && (
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">
                      {brand.labelAbove}
                    </p>
                  )}
                  <div class={`brand-logo-box ${isDark ? 'brand-logo-box--dark' : ''}`}>
                    <Image
                      class="brand-logo-image"
                      src={brand.logo}
                      alt={brand.name}
                      width={190}
                      height={96}
                      sizes="(min-width: 768px) 190px, 160px"
                      loading="lazy"
                      decoding="async"
                    />
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>

      <p class="text-center text-gray-700 text-lg mt-10 mb-6">
        {t('products.organic_certifications')}
      </p>
      <div class="certification-logos">
        <Image src={jasCertifiedImg} alt="JAS Certified Organic" width={120} height={80} class="certification-logo" loading="lazy" decoding="async" />
        <Image src={logoOrganicosImg} alt="Org谩nicos certificados" width={120} height={80} class="certification-logo" loading="lazy" decoding="async" />
        <Image src={usdaSymbolImg} alt="USDA Organic" width={120} height={80} class="certification-logo certification-logo--small" loading="lazy" decoding="async" />
        <Image src={letisLogoImg} alt="Letis" width={120} height={80} class="certification-logo" loading="lazy" decoding="async" />
        <Image src={logoUeImg} alt="Uni贸n Europea" width={120} height={80} class="certification-logo certification-logo--small" loading="lazy" decoding="async" />
      </div>
    </div>

    <div class="mt-10 rounded-3xl p-8 md:p-12 text-white text-center shadow-2xl relative overflow-hidden theme-institutional">
      <div class="absolute top-0 right-0 w-64 h-64 bg-white opacity-10 blur-[100px] -mr-32 -mt-32"></div>
      <div class="relative z-10">
        <h3 class="text-3xl md:text-4xl font-bold mb-4">
          {t('products.cta_title')}
        </h3>
        <p class="text-xl mb-4 text-white/90">
          {t('products.cta_description')}
        </p>
        <p class="text-lg text-white/80">
          {t('products.cta_catalog_hint')}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .product-card {
    animation: fadeInUp 0.6s ease-out;
    animation-fill-mode: both;
  }

  .product-card__media {
    height: 150px;
    position: relative;
    overflow: hidden;
    background: #f8fafc;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .product-card__media-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(140deg, rgba(15, 23, 42, 0.12), rgba(255, 255, 255, 0));
    pointer-events: none;
  }

  .product-card__content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .product-card__title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #0f172a;
  }

  .product-card__description {
    color: #475569;
    line-height: 1.6;
  }

  .brand-logo {
    flex-shrink: 0;
  }

  .brand-item {
    min-width: 160px;
  }

  .brand-card {
    border: none;
    border-radius: 18px;
    padding: 14px 18px 12px;
    min-width: 150px;
  }

  .brand-card--dark {
    /* background: linear-gradient(135deg, rgba(16, 185, 129, 0.14), rgba(34, 197, 94, 0.08)); */
    /* border-color: rgba(148, 163, 184, 0.25); */
  }

  .brand-logo-box {
    /* background: linear-gradient(135deg, #22d3ee, #38bdf8); */
    border-radius: 14px;
    padding: 12px;
    width: 190px;
    height: 96px;
    margin: 0 auto 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 22px rgba(15, 23, 42, 0.14);
  }

  .brand-logo-box--dark {
   /*  background: linear-gradient(135deg, #22d3ee, #38bdf8); */
    box-shadow: 0 10px 22px rgba(15, 23, 42, 0.3);
  }

  .brand-logo-image {
    width: 100%;
    height: 100%;
    max-height: 80px;
    max-width: 170px;
    object-fit: contain;
  }

  .certification-logos {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }

  .certification-logo {
    height: 4rem;
    width: auto;
    max-width: 120px;
    object-fit: contain;
    filter: grayscale(0);
  }

  .certification-logo--small {
    height: 3rem;
    max-width: 80px;
  }

  @media (min-width: 768px) {
    .certification-logo {
      height: 5rem;
      max-width: 140px;
    }
    .certification-logo--small {
      height: 4rem;
      max-width: 100px;
    }
  }

  .brand-marquee {
    --brand-speed: 28s;
    display: flex;
    overflow: hidden;
    position: relative;
    padding: 0.5rem 0;
    mask-image: linear-gradient(90deg, transparent 0%, black 12%, black 88%, transparent 100%);
    -webkit-mask-image: linear-gradient(90deg, transparent 0%, black 12%, black 88%, transparent 100%);
  }

  .brand-track {
    display: flex;
    align-items: center;
    gap: 2.5rem;
    flex-shrink: 0;
    width: max-content;
    padding-right: 2.5rem;
    will-change: transform;
    transform: translate3d(0, 0, 0);
    backface-visibility: hidden;
    animation: brand-scroll var(--brand-speed) linear infinite;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes brand-scroll {
    from {
      transform: translate3d(0, 0, 0);
    }
    to {
      transform: translate3d(-50%, 0, 0);
    }
  }

  /* Usuarios con "Reducir movimiento" activado: mostrar scroll horizontal en vez de animaci贸n */
  @media (prefers-reduced-motion: reduce) {
    .brand-marquee {
      overflow-x: auto;
      overflow-y: hidden;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: thin;
    }
    .brand-marquee::-webkit-scrollbar {
      height: 6px;
    }
    .brand-marquee::-webkit-scrollbar-thumb {
      background: #cbd5e1;
      border-radius: 3px;
    }
    .brand-track {
      animation: none;
      /* Una sola copia de marcas para scroll manual */
    }
  }

  .theme-gradient {
    background: linear-gradient(to bottom right, var(--theme-gradient-from), var(--theme-gradient-to));
  }

  .theme-text {
    color: var(--theme-primary) !important;
  }
</style>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate');
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.product-card').forEach((card) => {
    observer.observe(card);
  });
</script>
