---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';
import agrocubeLogo from '../assets/brands/agrocube_logo.png';
import biovitaLogo from '../assets/brands/biovita_negro_1.png';
/* import agriglobalLogo from '../assets/brands/logo_agriglobal.svg'; */
import microvidasLogo from '../assets/brands/logo_microvidas.png';
import bloemenLogo from '../assets/brands/logobloemen_1.svg';
import simbiosLogo from '../assets/brands/simbios.png';
import backgroundPattern from '../assets/background.svg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const products = [
  {
    name: 'Materia Org치nica',
    nameEn: 'Organic Matter',
    description: 'Mejora la estructura del suelo y aumenta la retenci칩n de agua y nutrientes',
    descriptionEn: 'Improves soil structure and increases water and nutrient retention',
    icon: '游꺔',
    color: 'from-green-500 to-emerald-600'
  },
  {
    name: 'Biofertilizantes',
    nameEn: 'Biofertilizers',
    description: 'Microorganismos beneficiosos que mejoran la disponibilidad de nutrientes',
    descriptionEn: 'Beneficial microorganisms that improve nutrient availability',
    icon: '游빏',
    color: 'from-blue-500 to-cyan-600'
  },
  {
    name: 'Bioestimulantes Foliares',
    nameEn: 'Foliar Biostimulants',
    description: 'Potencian el crecimiento y la resistencia de las plantas',
    descriptionEn: 'Enhance plant growth and resistance',
    icon: '游꼒',
    color: 'from-lime-500 to-green-600'
  },
  {
    name: 'Nanopart칤culas',
    nameEn: 'Nanoparticles',
    description: 'Tecnolog칤a de vanguardia para m치xima absorci칩n y eficiencia',
    descriptionEn: 'Cutting-edge technology for maximum absorption and efficiency',
    icon: '丘勇',
    color: 'from-purple-500 to-indigo-600'
  },
  {
    name: 'Microorganismos',
    nameEn: 'Microorganisms',
    description: 'Mejoran la salud del suelo y las plantas de manera natural',
    descriptionEn: 'Improve soil and plant health naturally',
    icon: '游',
    color: 'from-teal-500 to-emerald-600'
  },
  {
    name: 'Correctores de Suelo',
    nameEn: 'Soil Correctors',
    description: 'Optimizan el pH y la estructura del suelo para mejor producci칩n',
    descriptionEn: 'Optimize pH and soil structure for better production',
    icon: '游',
    color: 'from-amber-500 to-orange-600'
  }
];

type Brand = {
  name: string;
  logo: ImageMetadata;
  theme?: 'dark';
};

const brands: Brand[] = [
  {
    name: 'Agrocube',
    logo: agrocubeLogo
  },
  {
    name: 'Biovita',
    logo: biovitaLogo
  },
  /* {
    name: 'Agriglobal',
    logo: agriglobalLogo,
    theme: 'dark'
  }, */
  {
    name: 'Microvidas',
    logo: microvidasLogo
  },
  {
    name: 'Bloemen',
    logo: bloemenLogo
  },
];

const brandLoop = [...brands, ...brands];
---

<section id="tecnologias" class="bg-linear-to-br from-gray-50 to-white w-full py-16 md:py-20 lg:py-24">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{t('products.title')}</h2>
      <p class="text-4xl md:text-5xl font-bold text-gray-400 mb-4">
        {t('products.subtitle')}
      </p>
      <div class="flex justify-center">
        <Image src={simbiosLogo} alt="Simbios" class="h-24 w-auto object-contain" />
      </div>
    </div>

    <div class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {products.map((product, index) => (
          <div
            class="product-card group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100 cursor-pointer transform hover:-translate-y-2 overflow-hidden"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="product-card__media">
              <Image
                class="product-card__image"
                src={backgroundPattern}
                alt={t('products.image_alt')}
                width={640}
                height={360}
                sizes="(min-width: 1024px) 320px, (min-width: 768px) 45vw, 90vw"
                loading="lazy"
                decoding="async"
              />
              <div class="product-card__media-overlay"></div>
            </div>
            <div class="product-card__content">
              <h4 class="product-card__title">
                {lang === 'es' ? product.name : product.nameEn}
              </h4>
              <p class="product-card__description">
                {lang === 'es' ? product.description : product.descriptionEn}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="mt-12 bg-white rounded-3xl p-8 md:p-12 shadow-lg">
      <h3 class="text-2xl md:text-3xl font-bold text-center text-gray-900 mb-8">
        {t('products.brands_title')}
      </h3>
      <div class="brand-marquee" aria-label={t('products.brands_aria')}>
        <div class="brand-track">
          {brandLoop.map((brand, index) => {
            const isDark = brand.theme === 'dark';
            return (
              <div
                class="brand-logo brand-item flex items-center justify-center p-4 transition-all duration-300 transform hover:scale-105"
                aria-hidden={index >= brands.length}
              >
                <div class={`brand-card text-center ${isDark ? 'brand-card--dark' : ''}`}>
                  <div class={`brand-logo-box ${isDark ? 'brand-logo-box--dark' : ''}`}>
                    <Image
                      class="brand-logo-image"
                      src={brand.logo}
                      alt={brand.name}
                      width={190}
                      height={96}
                      sizes="(min-width: 768px) 190px, 160px"
                      loading="lazy"
                      decoding="async"
                    />
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>

    <div class="mt-10 rounded-3xl p-8 md:p-12 text-white text-center shadow-2xl relative overflow-hidden theme-institutional">
      <div class="absolute top-0 right-0 w-64 h-64 bg-white opacity-10 blur-[100px] -mr-32 -mt-32"></div>
      <div class="relative z-10">
        <h3 class="text-3xl md:text-4xl font-bold mb-4">
          {t('products.cta_title')}
        </h3>
        <p class="text-xl mb-8 text-white/90">
          {t('products.cta_description')}
        </p>
        <a 
          target="_blank"
          href={"https://drive.google.com/file/d/1drPotvc0ht0EIL_yqxW1jDcdf_9t428w/view?usp=sharing"} 
          class="inline-flex items-center justify-center bg-white/10 backdrop-blur-md text-white border-2 border-white/50 px-8 py-4 rounded-full font-semibold hover:bg-white/20 transition-all"
        >
          {t('products.catalog_button')}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .product-card {
    animation: fadeInUp 0.6s ease-out;
    animation-fill-mode: both;
  }

  .product-card__media {
    height: 150px;
    position: relative;
    overflow: hidden;
    background: #f8fafc;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .product-card__media-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(140deg, rgba(15, 23, 42, 0.12), rgba(255, 255, 255, 0));
    pointer-events: none;
  }

  .product-card__content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .product-card__title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #0f172a;
  }

  .product-card__description {
    color: #475569;
    line-height: 1.6;
  }

  .brand-logo {
    flex-shrink: 0;
  }

  .brand-item {
    min-width: 160px;
  }

  .brand-card {
    border: none;
    border-radius: 18px;
    padding: 14px 18px 12px;
    min-width: 150px;
  }

  .brand-card--dark {
    /* background: linear-gradient(135deg, rgba(16, 185, 129, 0.14), rgba(34, 197, 94, 0.08)); */
    /* border-color: rgba(148, 163, 184, 0.25); */
  }

  .brand-logo-box {
    /* background: linear-gradient(135deg, #22d3ee, #38bdf8); */
    border-radius: 14px;
    padding: 12px;
    width: 190px;
    height: 96px;
    margin: 0 auto 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 22px rgba(15, 23, 42, 0.14);
  }

  .brand-logo-box--dark {
   /*  background: linear-gradient(135deg, #22d3ee, #38bdf8); */
    box-shadow: 0 10px 22px rgba(15, 23, 42, 0.3);
  }

  .brand-logo-image {
    width: 100%;
    height: 100%;
    max-height: 80px;
    max-width: 170px;
    object-fit: contain;
  }

  .brand-marquee {
    --brand-speed: 28s;
    display: flex;
    overflow: hidden;
    position: relative;
    padding: 0.5rem 0;
    mask-image: linear-gradient(90deg, transparent 0%, black 12%, black 88%, transparent 100%);
    -webkit-mask-image: linear-gradient(90deg, transparent 0%, black 12%, black 88%, transparent 100%);
  }

  .brand-track {
    display: flex;
    align-items: center;
    gap: 2.5rem;
    flex-shrink: 0;
    width: max-content;
    padding-right: 2.5rem;
    will-change: transform;
    transform: translate3d(0, 0, 0);
    backface-visibility: hidden;
    animation: brand-scroll var(--brand-speed) linear infinite;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes brand-scroll {
    from {
      transform: translate3d(0, 0, 0);
    }
    to {
      transform: translate3d(-50%, 0, 0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .brand-track {
      animation: none;
    }
  }

  .theme-gradient {
    background: linear-gradient(to bottom right, var(--theme-gradient-from), var(--theme-gradient-to));
  }

  .theme-text {
    color: var(--theme-primary) !important;
  }
</style>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate');
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.product-card').forEach((card) => {
    observer.observe(card);
  });
</script>
