---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import icon32 from '../assets/cropped-icono-web-32x32.png';
import icon180 from '../assets/cropped-icono-web-180x180.png';
import icon192 from '../assets/cropped-icono-web-192x192.png';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import Button from '../components/Button.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Props {
	title?: string;
	description?: string;
}

const { title = "Agua Fertil | Nutrición Vegetal Biológica", description = "Líderes en biotecnología sustentable para el agro. Soluciones innovadoras para potenciar tu producción cuidando el medio ambiente." } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" sizes="32x32" href={icon32.src} />
		<link rel="apple-touch-icon" href={icon180.src} />
		<link rel="icon" sizes="192x192" href={icon192.src} />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />

		<title>{title}</title>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="antialiased">
		<Navigation />
		<main>
			<slot />
		</main>
		<Footer />

    <!-- WhatsApp Floating Action Button & Tooltip -->
    <div class="fixed bottom-8 right-8 z-50 flex flex-col items-end">
      
      <!-- Tooltip -->
      <div 
        id="whatsapp-tooltip" 
        class="mb-4 bg-white/90 backdrop-blur-md border border-white/20 rounded-2xl shadow-2xl p-4 hidden transform transition-all origin-bottom-right scale-0 opacity-0 w-64"
      >
        <div class="text-center">
            <h4 class="font-bold text-gray-800 text-sm mb-3">{t('whatsapp.title')}</h4>
            <div class="bg-white p-2 rounded-xl shadow-inner inline-block mb-3">
                <img 
                    src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=https://wa.me/+542644446054" 
                    alt="WhatsApp QR" 
                    class="w-32 h-32" 
                    loading="lazy"
                />
            </div>
			<Button
				href="https://wa.me/+542644446054"  
				text={t('whatsapp.chat_link')} 
				className="text-sm px-10 py-4"
				target="_blank"
				rel="noopener noreferrer"
			/>
        </div>
      </div>

      <!-- Button -->
      <button
        id="whatsapp-fab"
        class="w-16 h-16 bg-gradient-to-br from-[#25D366] to-[#128C7E] text-white rounded-full shadow-lg hover:shadow-xl hover:scale-110 transition-all duration-300 flex items-center justify-center group"
        aria-label="Contact via WhatsApp"
      >
        <svg class="w-8 h-8 md:w-9 md:h-9" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
      </button>

    </div>
	</body>
</html>

<style>
	html {
		font-family: 'Montserrat', system-ui, -apple-system, sans-serif;
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		padding: 0;
		background: white;
	}

	.theme-gradient {
		background: linear-gradient(to bottom right, var(--theme-gradient-from), var(--theme-gradient-to));
	}
</style>

<script>
	const whatsappFab = document.getElementById('whatsapp-fab');
	const whatsappTooltip = document.getElementById('whatsapp-tooltip');

	whatsappFab?.addEventListener('click', () => {
		if (whatsappTooltip) {
			const isHidden = whatsappTooltip.classList.contains('hidden');
			if (isHidden) {
				whatsappTooltip.classList.remove('hidden');
				// Small timeout to allow transition
				setTimeout(() => {
					whatsappTooltip.classList.remove('scale-0', 'opacity-0');
					whatsappTooltip.classList.add('scale-100', 'opacity-100');
				}, 10);
			} else {
				whatsappTooltip.classList.remove('scale-100', 'opacity-100');
				whatsappTooltip.classList.add('scale-0', 'opacity-0');
				setTimeout(() => {
					whatsappTooltip.classList.add('hidden');
				}, 300); // Wait for transition
			}
		}
	});

	// Close tooltip when clicking outside
	document.addEventListener('click', (e) => {
		if (whatsappFab && whatsappTooltip && !whatsappFab.contains(e.target as Node) && !whatsappTooltip.contains(e.target as Node)) {
			whatsappTooltip.classList.remove('scale-100', 'opacity-100');
			whatsappTooltip.classList.add('scale-0', 'opacity-0');
			setTimeout(() => {
				whatsappTooltip.classList.add('hidden');
			}, 300);
		}
	});

	const lazySections = Array.from(document.querySelectorAll('.lazy-section'));
	const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

	if (!('IntersectionObserver' in window) || prefersReducedMotion) {
		lazySections.forEach((section) => section.classList.add('is-visible'));
	} else if (lazySections.length > 0) {
		const observer = new IntersectionObserver(
			(entries, obs) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add('is-visible');
						obs.unobserve(entry.target);
					}
				});
			},
			{
				rootMargin: '0px 0px -10% 0px',
				threshold: 0.15
			}
		);

		lazySections.forEach((section) => observer.observe(section));
	}
</script>
